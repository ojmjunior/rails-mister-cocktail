<nav class="navbar navbar-dark bg-dark">
  <%= image_tag "main-avatar.jpg", class: "avatar" %>
  <span class = "navbar-brand font-weight-bold">TIENDA DEL CHAVO</span>
  <div class="flats-options">
    <%= link_to('Añadir un refresco', new_cocktail_path, class: "btn btn-outline-info") %>
  </div>
</nav>

<div class="container">
<div class="row mb-3" style="opacity: 40%; height: 420px; background-image: url('<%= image_path "main-avatar.jpg", height: 420, width: 400, crop: :fill %>')">
  <div class="col-12">
    <h1 class="d-flex justify-content-center" style="font-size: 80px;">Añadir un refresco</h1>
  </div>
</div>


<div>  
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name, label: "Nombre del refresco" %>
    <%= f.input :photo, as: :file %>
    <div class="d-flex justify-content-between">
      <%= f.submit 'Ahorrar', class: "btn btn-primary" %>
      <%= link_to('Volver a la lista', cocktails_path, class: "btn btn-outline-secondary") %>
    </div>
  <% end %>
</div>