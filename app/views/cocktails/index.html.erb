</nav>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), 
url('<%= image_path "main-avatar.jpg" %>')">
  <h1>los mejores refrescos de mexico</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="my-2 text-center">Todos nuestros refrescos</h1>
    </div>
  </div>
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-4 mb-2">
      <div class="card">
        <% if cocktail.photo.attached?%>
          <div class="background-image" style="height: 300px; background-image: url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          </div>
        <% else %>
          <div class="background-image" style="opacity: 40%; height: 300px; background-image: url('<%= image_path "main-avatar.jpg", height: 300, width: 400, crop: :fill %>')">
          </div>
        <% end %>
        <div class="card-body bg-light">
          <h5 class="card-title"><%= cocktail.name %></h5>
        </div>
        <div class="card-footer bg-white">
          <%= link_to('Detalle', cocktail_path(cocktail), class: "mr-3 text-decoration-none") %>
          <%= link_to('Eliminar', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?'}, class: "mr-3 text-decoration-none text-danger") %>
        </div>
      </div>  
    </div>
  <% end  %>
  </div>
</div>
